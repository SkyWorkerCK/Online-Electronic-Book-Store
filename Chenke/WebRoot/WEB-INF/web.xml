<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name></display-name>	
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  
  
  
  <servlet>
  	<description>注册组件</description>
  	<servlet-name>regist</servlet-name>
  	<servlet-class>chenke.cqwu.test.servlet.RegistServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>regist</servlet-name>
  	<url-pattern>/regist</url-pattern>
  </servlet-mapping>
  
  
  
  <servlet>
  	<description>登录组件</description>
  	<servlet-name>login</servlet-name>
  	<servlet-class>chenke.cqwu.test.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>login</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  
  
  <servlet>
  	<description>显示书籍组件</description>
  	<servlet-name>showBooks</servlet-name>
  	<servlet-class>chenke.cqwu.test.servlet.ShowBooksServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>showBooks</servlet-name>
  	<url-pattern>/books</url-pattern>
  </servlet-mapping>
  
  
  
  <servlet>
  	<description>添加购物车</description>
  	<servlet-name>addToCart</servlet-name>
  	<servlet-class>chenke.cqwu.test.servlet.CartServletCK</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>addToCart</servlet-name>
  	<url-pattern>/cart</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<description>从购物车中移除</description>
	<servlet-name>removeFromCart</servlet-name>
  	<servlet-class>chenke.cqwu.test.servlet.CartServletCK</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>removeFromCart</servlet-name>
  	<url-pattern>/modify</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<description>订单处理</description>
	<servlet-name>MyOrderServlet</servlet-name>
  	<servlet-class>chenke.cqwu.test.servlet.MyOrderServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>MyOrderServlet</servlet-name>
  	<url-pattern>/order</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<description>添加条目</description>
	<servlet-name>AddItemServlet</servlet-name>
  	<servlet-class>chenke.cqwu.test.servlet.AddItemServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>AddItemServlet</servlet-name>
  	<url-pattern>/item</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  	<description>模糊搜索</description>
	<servlet-name>SearchServlet</servlet-name>
  	<servlet-class>chenke.cqwu.test.servlet.SearchServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>SearchServlet</servlet-name>
  	<url-pattern>/search</url-pattern>
  </servlet-mapping>
  
</web-app>
